@page "/Templates"
@using HundredDays.Components
@using HundredDays.Services
@inject WorkoutApi Api
@inject NavigationManager Nav

<div class="Template-Header">
    <h3>Workout Templates</h3>
    
    <button class="add-template" onclick="">
        <h2> + </h2>
    </button>

</div>

<div class="grid"> 
    @foreach(var item in list)
    {
        <div class="card" @onclick="() => Go(item.Id)">

    <h3> @item.Name </h3>
    <p class="plan-cta">Start Workout →</p>
</div>
    }
</div>
@code {

    List<WorkoutTemplatesDto> list = new(); 



    protected override async Task OnInitializedAsync()
    {
        list = await Api.GetTemplates();

    }


    void Go(int id)
    {
        Nav.NavigateTo($"/Templates/{id}");
    }

}
