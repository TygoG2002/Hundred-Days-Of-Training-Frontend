@page "/"
@inject WorkoutApi Api
@inject NavigationManager Nav
@inject IJSRuntime JS

<h1 class="page-title">Dashboard</h1>
<p class="page-subtitle">@Greeting</p>
<section class="dashboard-section">

    @if (IsLoading)
    {
        <div class="grid">
            <div class="card skeleton-line"></div>
            <div class="card skeleton-line"></div>
        </div>
    }
    else if (HasError)
    {
        <div class="error-state">
            <h3>Something went wrong</h3>
            <p>We couldn’t load today’s workouts.</p>

            <button class="finish-button" @onclick="Retry">
                Retry
            </button>
        </div>
    }
    else if (!TodayPlans.Any() && !TodayTemplates.Any() && AllCompleted)
    {
        <div class="empty-state celebration">
            <h2>🏆 You did it.</h2>
            <p>You completed all your workouts.</p>
            <p class="muted">100 days. No excuses. Respect. 💪</p>
        </div>
    }
    else if (!TodayPlans.Any() && !TodayTemplates.Any())
    {
        <div class="empty-state">
            <p>🎉 You’re all done for today.</p>
            <p class="muted">@Motivation</p>
        </div>
    }
    else
    {
        @if (TodayPlans.Any())
        @if (TodayPlans.Any())
        {
            <h3 class="section-title">Still to do today</h3>

            <div class="grid">
                @foreach (var workout in TodayPlans)
                {
                    <div class="card card-today"
                         @onclick="() => Go(workout.Id)">
                        <div class="card-header">
                            <h3>@workout.Name</h3>
                        </div>

                        <p class="card-meta">
                            Day @(workout.CompletedDays + 1) of @workout.TotalDays
                        </p>

                        <p class="plan-cta">Start workout →</p>
                    </div>
                }
            </div>
        }

        @if (TodayTemplates.Any())
        {
            <h3 class="section-title">Scheduled workout</h3>

            <div class="grid">
                @foreach (var template in TodayTemplates)
                {
                    <div class="card card-today"
                         @onclick="() => StartTemplate(template.TemplateId)">
                        <div class="card-header">
                            <h3>@template.Name</h3>
                        </div>

                        <p class="plan-cta">Start workout →</p>
                    </div>
                }
            </div>
        }
    }
</section>

<h3 class="section-title">Plan your workouts</h3>

<section class="dashboard-section">

        <div class="days-grid-wrapper">

    <div class="days-grid">

        @foreach (var day in WeekDays)
        {
            var isToday = (int)DateTime.Today.DayOfWeek == day.Day;

            <div class="day-col @(isToday ? "is-today" : "")"
                 data-day="@day.Name">
                <span class="dayofweekitem">@day.Name</span>

                @foreach (var item in DayOfWeeks.Where(d => d.DayOfWeek == day.Day))
                {
                    <div class="card-days"
                         @key="item.Id"
                         data-schedule-id="@item.Id">
                        @GetTemplateName(item.templateId)
                    </div>

                }
            </div>
        }


    </div>
    </div>
</section>





<section class="dashboard-section danger">
    <h3 class="section-title">Daily Discipline</h3>

    <div class="card discipline-card">
        <h3>@DisciplineTitle</h3>
        <p class="muted">@DisciplineDescription</p>

        @if (DisciplineCompleted)
        {
            <div class="discipline-status completed">
                <span class="status-icon">✓</span>
                <span class="status-text">Completed today</span>
            </div>
        }
        else
        {
            <button class="finish-button outline"
                    @onclick="CompleteDiscipline">
                I did it
            </button>
        }
    </div>
</section>

<script>
    window.initCardDrag = (dotNetRef) => {

        let activeCard = null;
        let ghost = null;
        let offsetX = 0;
        let offsetY = 0;

        const dayMap = {
            Sunday: 0,
            Monday: 1,
            Tuesday: 2,
            Wednesday: 3,
            Thursday: 4,
            Friday: 5,
            Saturday: 6
        };

        const getDropColumn = (x, y) => {
            const cols = document.querySelectorAll(".day-col");
            for (const col of cols) {
                const r = col.getBoundingClientRect();
                if (x >= r.left && x <= r.right && y >= r.top && y <= r.bottom) {
                    return col;
                }
            }
            return null;
        };

        document.querySelectorAll(".card-days").forEach(card => {

            if (card.dataset.bound) return;
            card.dataset.bound = "true";

            card.style.touchAction = "none";

            card.addEventListener("pointerdown", e => {
                e.preventDefault();

                activeCard = card;

                const rect = card.getBoundingClientRect();
                offsetX = e.clientX - rect.left;
                offsetY = e.clientY - rect.top;

                ghost = card.cloneNode(true);
                ghost.classList.add("dragging");
                ghost.style.position = "fixed";
                ghost.style.left = rect.left + "px";
                ghost.style.top = rect.top + "px";
                ghost.style.width = rect.width + "px";
                ghost.style.height = rect.height + "px";
                ghost.style.pointerEvents = "none";
                ghost.style.zIndex = "9999";

                document.body.appendChild(ghost);

                card.setPointerCapture(e.pointerId);
            });

            card.addEventListener("pointermove", e => {
                if (!ghost) return;

                ghost.style.left = (e.clientX - offsetX) + "px";
                ghost.style.top  = (e.clientY - offsetY) + "px";
            });

            card.addEventListener("pointerup", async e => {
                if (!activeCard) return;

                card.releasePointerCapture(e.pointerId);

                const dropCol = getDropColumn(e.clientX, e.clientY);

                ghost.remove();
                ghost = null;

                if (!dropCol) {
                    activeCard = null;
                    return;
                }

                const scheduleId = activeCard.dataset.scheduleId;
                if (!scheduleId) {
                    activeCard = null;
                    return;
                }

                const dayName = dropCol.dataset.day;
                const newDay = dayMap[dayName];
                if (newDay === undefined) {
                    activeCard = null;
                    return;
                }

                dropCol.appendChild(activeCard);

                try {
                    await dotNetRef.invokeMethodAsync(
                        "UpdateWeekPlanningJs",
                        Number(scheduleId),
                        newDay
                    );
                } catch (err) {
                    console.error("Backend update failed", err);
                }

                activeCard = null;

                setTimeout(() => window.initCardDrag(dotNetRef), 0);
            });

            card.addEventListener("pointercancel", () => {
                if (ghost) ghost.remove();
                ghost = null;
                activeCard = null;
            });
        });
    };
</script>

@code {
    TodayDashboardDto? Today;

    bool IsLoading = true;
    bool HasError = false;
    bool AllCompleted = false;

    bool DisciplineCompleted;


    List<PlanOverviewDto> TodayPlans =>
        Today?.Plans ?? new();

    List<TodayTemplateDto> TodayTemplates =>
        Today?.Templates ?? new();

    List<WorkoutTemplatesDto> allTemplates = new();
    List<WeekPlanningDto> DayOfWeeks = new();

    readonly (int Day, string Name)[] WeekDays =
{
    (1, "Monday"),
    (2, "Tuesday"),
    (3, "Wednesday"),
    (4, "Thursday"),
    (5, "Friday"),
    (6, "Saturday"),
    (0, "Sunday")
};

    string Greeting
    {
        get
        {
            var hour = DateTime.Now.Hour;

            if (hour < 11)
                return "Good morning ☀️ Your focus for today";

            if (hour < 18)
                return "Good afternoon 👋 Your focus for today";

            return "Good evening 🌙 Your focus for today";
        }
    }

    string Motivation =>
        DateTime.Now.DayOfYear switch
        {
            var d when d % 5 == 0 => "Consistency beats motivation.",
            var d when d % 5 == 1 => "Just showing up is enough.",
            var d when d % 5 == 2 => "One workout closer to your goal.",
            var d when d % 5 == 3 => "Don’t break the chain.",
            _ => "Small effort. Big results."
        };

    string DisciplineTitle =>
        (DateTime.Today.DayOfYear % 8) switch
        {
            0 => "Train",
            1 => "Quads of Stone",
            2 => "Hang or Fall",
            3 => "Still in the Fire",
            4 => "Earn the Exit",
            5 => "No Dopamine Until Earned",
            6 => "Cold Exposure",
            7 => "Read Without Escape",
            _ => "Discipline"
        };

    string DisciplineDescription =>
        (DateTime.Today.DayOfYear % 8) switch
        {
            0 => "Do all Daily workout plans one after the other.",
            1 => "Wall sit 1 minute total. Every stand-up adds 20 squats.",
            2 => "Dead hang 2 minutes total. Drop = 20 push-ups. No straps.",
            3 => "Deep squat hold 1 minutes. Heels down. No movement. No distractions.",
            4 => "2 rounds: 10 burpees, 10 push-ups, 10 squats. No rest.",
            5 => "First 4 hours of the day: no phone scrolling, no sugar, no entertainment.",
            6 => "Cold shower 3 minutes. No warm finish.",
            7 => "Read 10 pages of a difficult book. No music. No phone.",
            _ => "Do something hard."
        };

    DotNetObjectReference<Dashboard>? _dotNetRef;



    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _dotNetRef = DotNetObjectReference.Create(this);

            await Load();
            await InvokeAsync(StateHasChanged);
        }

        if (!IsLoading && !HasError)
        {
            await JS.InvokeVoidAsync("initCardDrag", _dotNetRef);
        }
    }



    public void Dispose()
    {
        _dotNetRef?.Dispose();
    }

    [JSInvokable]
    public async Task UpdateWeekPlanningJs(int id, int dayOfWeek)
    {
        await Api.UpdateWeekPlanning(id, dayOfWeek);
        await Load();
        await InvokeAsync(StateHasChanged);
    }


  



    protected override async Task OnInitializedAsync()
    {
        var key = $"discipline-{DateTime.Today:yyyy-MM-dd}";
        DisciplineCompleted =
            await JS.InvokeAsync<string>("localStorage.getItem", key) == "done";
    }


    async Task Load()
    {
        try
        {
            IsLoading = true;
            HasError = false;

            Today = await Api.GetTodayWorkouts();
            DayOfWeeks = await Api.GetDayOfWeekPlanning();
            allTemplates = await Api.GetTemplates();


            var plans = await Api.GetPlansOverview();
            AllCompleted = plans.Any() &&
                           plans.All(p => p.CompletedDays >= p.TotalDays);
        }
        catch
        {
            HasError = true;
            Today = null;
            AllCompleted = false;
        }
        finally
        {
            IsLoading = false;
        }
    }

    async Task Retry() => await Load();

    string GetTemplateName(int templateId)
    {
        return allTemplates?
            .FirstOrDefault(t => t.Id == templateId)?.Name
            ?? $"Template {templateId}";
    }


    void Go(int planId)
    {
        var completedDays =
            TodayPlans.First(p => p.Id == planId).CompletedDays;

        Nav.NavigateTo(
            $"/plan/{planId}/day/{completedDays + 1}?completed={completedDays}");
    }

    async Task StartTemplate(int templateId)
    {
        var session = await Api.StartWorkoutSession(templateId);

        Nav.NavigateTo($"/Templates/{templateId}");
    }

    async Task CompleteDiscipline()
    {
        DisciplineCompleted = true;

        var key = $"discipline-{DateTime.Today:yyyy-MM-dd}";
        await JS.InvokeVoidAsync("localStorage.setItem", key, "done");
    }
}
