@page "/"
@inject WorkoutApi Api
@inject NavigationManager Nav

<h1 class="page-title">Dashboard</h1>
<p class="page-subtitle">@Greeting</p>

<section class="dashboard-section">

    @if (IsLoading)
    {
        <div class="grid">
            <div class="card skeleton-line"></div>
            <div class="card skeleton-line"></div>
        </div>
    }
    else if (HasError)
    {
        <div class="error-state">
            <h3>Something went wrong</h3>
            <p>We couldn’t load today’s workouts.</p>

            <button class="finish-button" @onclick="Retry">
                Retry
            </button>
        </div>
    }
    else if (!TodayWorkouts!.Any() && AllCompleted)
    {
        <div class="empty-state celebration">
            <h2>🏆 You did it.</h2>
            <p>You completed all your workouts.</p>
            <p class="muted">100 days. No excuses. Respect. 💪</p>
        </div>
    }
    else if (!TodayWorkouts!.Any())
    {
        <div class="empty-state">
            <p>🎉 You’re all done for today.</p>
            <p class="muted">@Motivation</p>
        </div>
    }
    else
    {
        <h3 class="section-title">Still to do today</h3>

        <div class="grid">
            @foreach (var workout in TodayWorkouts!)
            {
                <div class="card card-today" @onclick="() => Go(workout.Id)">
                    <div class="card-header">
                        <h3>@workout.Name</h3>
                        <span class="badge">Today</span>
                    </div>

                    <p class="card-meta">
                        Day @(workout.CompletedDays + 1) of @workout.TotalDays
                    </p>

                    <p class="plan-cta">Start workout →</p>
                </div>
            }
        </div>
    }
</section>

@code {
    List<PlanOverviewDto>? TodayWorkouts;

    bool IsLoading = true;
    bool HasError = false;
    bool AllCompleted = false;

    string Greeting
    {
        get
        {
            var hour = DateTime.Now.Hour;

            if (hour < 11)
                return "Good morning ☀️ Your focus for today";

            if (hour < 18)
                return "Good afternoon 👋 Your focus for today";

            return "Good evening 🌙 Your focus for today";
        }
    }

    // ---------------- MOTIVATION ----------------
    string Motivation
    {
        get
        {
            return Motivations[DateTime.Now.Day % Motivations.Length];
        }
    }

    static readonly string[] Motivations =
    {
        "Consistency beats motivation.",
        "Just showing up is enough.",
        "One workout closer to your goal.",
        "Don’t break the chain.",
        "Small effort. Big results."
    };

    protected override async Task OnInitializedAsync()
    {
        await Load();
    }

    async Task Load()
    {
        try
        {
            IsLoading = true;
            HasError = false;

            TodayWorkouts = await Api.GetTodayWorkouts();

            var plans = await Api.GetPlansOverview();
            AllCompleted = plans.Any() &&
                           plans.All(p => p.CompletedDays >= p.TotalDays);
        }
        catch
        {
            HasError = true;
            TodayWorkouts = new();
            AllCompleted = false;
        }
        finally
        {
            IsLoading = false;
        }
    }

    async Task Retry()
    {
        await Load();
    }

    void Go(int id)
    {
        var completedDays =
            TodayWorkouts!.First(p => p.Id == id).CompletedDays;

        Nav.NavigateTo(
            $"/plan/{id}/day/{completedDays + 1}?completed={completedDays}");
    }
}
